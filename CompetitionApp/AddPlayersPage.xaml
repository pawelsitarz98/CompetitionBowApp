<Page x:Class="CompetitionApp.AddPlayers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CompetitionApp"
      mc:Ignorable="d" 
      d:DesignHeight="325" d:DesignWidth="558"
      Title="AddPlayers">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="50 0 100 100">
           
            <StackPanel Orientation="Vertical">
                <Label Content="Name" FontSize="10"/>
                <TextBox x:Name="TxtName" Width="100" Height="25" Background="White" HorizontalAlignment="Left" VerticalAlignment="Center" BorderThickness="1,1,1,1"/>
                <Separator Height="15" Visibility="Hidden"/>
                <Button x:Name="BtnAddPlayer" Height="25" Content="Add" Background="#FF2196F3" Click="BtnAddPlayer_Click"/>
                <Separator Height="25" Visibility="Hidden"/>
                

            </StackPanel>
            <Separator Width="40" Visibility="Hidden"/>
            <StackPanel Orientation="Vertical">
                <Label Content="Surname" FontSize="10"/>
                <TextBox x:Name="TxtSurname" Width="100" Height="25" Background="White" HorizontalAlignment="Left" VerticalAlignment="Center" BorderThickness="1,1,1,1"/>
                <Separator Height="15" Visibility="Hidden"/>
                <ComboBox x:Name="ComboBoxClub" IsEditable="True" IsReadOnly="True" Text="--Select Club--" Width="100" Height="25" FontSize="10" HorizontalAlignment="Center" BorderThickness="1,1,1,1"  />
                <Separator Height="15" Visibility="Hidden"/>
                <ComboBox x:Name="ComboBoxCategory" IsEditable="True" IsReadOnly="True" Text="--Select Category--" Width="100" Height="25" FontSize="10" HorizontalAlignment="Center" BorderThickness="1,1,1,1"  />
            </StackPanel>
            
            


        </StackPanel>
        <TextBox x:Name="BoxMsg" Height="100" Width="300" Foreground="red" VerticalAlignment="Bottom" Margin="218,0,40,30" BorderThickness="1,1,1,1" IsReadOnly="True"/>

    </Grid>
</Page>
