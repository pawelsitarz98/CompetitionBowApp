<Page x:Class="CompetitionApp.AddPlayers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CompetitionApp"
      mc:Ignorable="d" 
      d:DesignHeight="325" d:DesignWidth="558"
      Title="AddPlayers" Background="LightGray">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="50 0 100 100">
            <StackPanel Orientation="Vertical">
                <Label Content="Name" FontSize="10"/>
                <TextBox x:Name="TxtName" Width="100" Height="25" Background="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Button x:Name="BtnAddPlayer" Content="Add" Background="#FF2196F3"/>
            </StackPanel>
            <Label Width="60"/>
            <StackPanel Orientation="Vertical">
                <Label Content="Surname" FontSize="10"/>
                <TextBox x:Name="TxtSurname" Width="100" Height="25" Background="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>
            
        </StackPanel>
        

    </Grid>
</Page>
